---
import BaseHead from '@/components/basehead/BaseHead.vue';
import Background from '@/components/p5.vue';
import '@/styles.css';

interface Props {
	title?: string;
	showBackground?: boolean;
}

const {title = 'Daggiana Madrid', showBackground = true} =
	Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1.0'
		/>
		<title>{title}</title>
	</head>
	<body>
		<BaseHead client:only='vue' />
		<main>
			<slot />
		</main>
	</body>
	{showBackground && <Background client:only='vue' />}
</html>
